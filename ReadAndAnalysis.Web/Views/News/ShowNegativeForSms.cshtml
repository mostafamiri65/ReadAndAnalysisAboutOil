@using ReadAndAnalysis.Data.Entities
@model List<SendingSmsType>
@{
    ViewData["Title"] = "ShowNegativeForSms";
    Layout = null;
}
<form asp-action="ShowNegativeForSms" method="post">
    <input name="newsId" type="hidden" value="@ViewBag.NewsId" />
    <div>
        <label>گروه بندی برای ارسال پیام</label>
        <select class="form-select" name="typeId">
            <option>انتخاب کنید</option>
            @foreach(var item in Model)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>
    <div class="mt-3 col-4 offset-4 d-grid gap-2">
        <input type="submit" value="ثبت" class="btn btn-success" />
    </div>
</form>